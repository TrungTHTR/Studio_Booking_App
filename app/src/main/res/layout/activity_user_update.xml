<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage.UserUpdateActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/cardView"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/primaryTextColor"
            android:id="@+id/UserToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/UserImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/download" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:text="Name "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="Nguyen Huynh Phi"
                android:textSize="18sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginEnd="10dp"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:text="Birth Day "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserDOB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="15/06/2001"
                android:textSize="18sp" />
            <!--            <DatePicker-->
            <!--                android:id="@+id/UserDOB"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_gravity="center_vertical"-->
            <!--                android:layout_weight="1"-->
            <!--                android:calendarTextColor="@color/cardView"-->
            <!--                android:foregroundGravity="right"-->
            <!--                android:headerBackground="@color/cardView" />-->

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:text="Phone "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="0966324244"
                android:textSize="18sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:text="Email "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="Phinhse150972@gmail.com"
                android:textSize="18sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:text="Password "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="*******"
                android:textSize="18sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:gravity="end|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/Update"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Update" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
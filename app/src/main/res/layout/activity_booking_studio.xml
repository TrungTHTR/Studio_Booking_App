<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".BookingStudioActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolBarBookingStudioActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/Text_Appbar_Color" />

    <ExpandableListView
        android:id="@+id/ExpandableListBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:groupIndicator="@android:color/transparent"
        android:scrollbars="none" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="start|center_vertical"
                android:text="Order summary"
                android:textColor="@color/BlackText"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                style="@style/formInputText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/textBlackHeader"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Booking Price"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_BookingPrice"
                        style="@style/textBlackHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="190.000 VND"
                        android:textSize="17sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textBlackHeader"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Fees"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_BookingFee"
                        style="@style/textBlackHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="0 VND"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <View
                        style="@style/textBlackHeader"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        style="@style/textBlackHeader"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Total"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_TotalPrice"
                        style="@style/textBlackHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="380.000 VND"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="start|center_vertical"
                android:text="Payment method"
                android:textColor="@color/BlackText"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/formInputText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:src="@drawable/momo_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        />

                    <TextView
                        android:paddingStart="10dp"
                        style="@style/textBlackHeader"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="MoMo"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_ContinuePayment"
        style="@style/buttonAppleLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_CancelBooking"
        style="@style/buttonGoogleLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="normal" />
</LinearLayout>
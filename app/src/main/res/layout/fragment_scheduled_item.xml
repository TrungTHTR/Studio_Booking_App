<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardView"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/OrderId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Order Id: 1000"
                android:textStyle="bold"
                android:textColor="@color/TextColor_Gallery"
                android:textSize="20sp"
                android:gravity="start|center" />

            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="Pending"
                android:textColor="@color/TextColor_Gallery"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/urlImageService"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image" />

            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_height="0dp"
                    android:id="@+id/orderServiceName"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Explored"
                    android:textColor="@color/TextColor_Gallery"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderServicePrice"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="end|center"
                    android:lines="1"
                    android:text="$90.000"
                    android:textColor="@color/GrayText"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderTotalOrderDetail"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:text="count"
            android:gravity="start|top"
            android:textColor="@color/BlackText"
            android:textSize="18sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/orderTotalPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Total: 100.000 USD"
            android:textColor="@color/Price"
            android:gravity="end|top"
            android:textSize="18sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderDate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="top|start"
                android:layout_height="match_parent"
                android:text="Date"
                android:textAllCaps="false"
                android:textSize="18sp" />


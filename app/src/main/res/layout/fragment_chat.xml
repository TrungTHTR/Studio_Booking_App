<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:background="@color/backgroundColor"
    tools:context=".Fragment.MainPageFragment.ChatFragment"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        android:id="@+id/layout_top_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardView"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp">


            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name_Studio"
                android:textSize="24dp"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/studioAvatar_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/nameStudio_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/studioAvatar_chat"
                android:paddingStart="10dp"
                android:text="Name Studio 1"
                android:textColor="@color/BlackText"
                android:textSize="24dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnZaloPayChat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ZALO PAY" />

        <LinearLayout
            android:id="@+id/layout_bottom_chat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:autofillHints="true"
                android:hint="Message"
                android:inputType="text"
                android:textColor="@color/BlackText"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Send" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>